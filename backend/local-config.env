# Local Development Configuration
# Copy this to .env.local for local testing

# Local DynamoDB Configuration
AWS_REGION=us-east-1
DYNAMODB_ENDPOINT=http://localhost:8000
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# Table Names for Local Development
APPOINTMENTS_TABLE=local-appointments
PATIENTS_TABLE=local-patients
PRACTICES_TABLE=local-practices

# Mock Cognito Configuration (for local testing)
USER_POOL_ID=local-pool
USER_POOL_CLIENT_ID=local-client

# Local API Configuration
API_GATEWAY_URL=http://localhost:3000

# Disable real notifications in local mode
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Logging
LOG_LEVEL=DEBUG
